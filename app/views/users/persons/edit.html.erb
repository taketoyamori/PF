<div class="main">
  <div class="item">
    <div class="logo">
      <h1>User edit</h1>
      <div>
        <h2><%= link_to '※Account deletion', person_path(@user), method: :delete, class: "nav-link" %></h2>
      </div>
    </div>
  </div>

  <div class="sign-up-item">
    <%= form_with model: @user, url: person_path, local: true do |f| %>
      <div class="user-info-area">
        <div class="image-field">
          <%= attachment_image_tag @user, :profile_image, fallback: "user_sample.jpg", size: '80x80', id: "img", class:"profile-image" %>
        </div>
        <div class="image-field">
          <%= f.label :profile_image, "画像をアップロード", class: "input_btn" %><br />
          <%= f.attachment_field :profile_image, class: "image_form" %>
        </div>
      </div>

      <div class="user-info-area">
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :age %><br />
          <%= f.number_field :age, autofocus: true %>
        </div>
      </div>

      <div class="user-info-area">
        <div class="field">
          <%= f.label :instagram,'Instagram URL' %><br />
          <%= f.text_field :instagram, autofocus: true, placeholder: "url ※任意" %>
        </div>

        <div class="field">
          <%= f.label :twitter,'Twitter URL' %><br />
          <%= f.text_field :twitter, autofocus: true, placeholder: "url ※任意" %>
        </div>

        <div class="field">
          <%= f.label :line,'LINE ID' %><br />
          <%= f.text_field :line, autofocus: true, placeholder: "ID ※任意" %>
        </div>
      </div>

      <div class="user-info-area">
        <div class="field">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, autofocus: true, placeholder: "自己紹介 ※formサイズ変更可", class: "text-area"%>
        </div>
      </div>

      <div class="submit-area">
        <div class="submit-field">
          <%= f.submit "編集完了", class: "input_btn" %>
        </div>
      </div>
    <% end %>
  </div>