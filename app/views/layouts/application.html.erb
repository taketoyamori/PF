<!DOCTYPE html>
<html>
  <head>
    <title>Choice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if request.fullpath.include?("admins") %>
      <%= render 'layouts/admins_header' %>
    <% elsif request.fullpath.include?("admin") %>
      <%= render 'layouts/admins_header' %>
    <% else %>
      <%= render 'layouts/users_header' %>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
